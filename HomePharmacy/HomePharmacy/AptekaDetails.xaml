<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="HomePharmacy.AptekaDetails"
             Title="Аптечка"
              Shell.TabBarIsVisible="True"
               Shell.BackgroundColor="Black"
               Shell.TitleColor="White">

    <ContentPage.Content>
        <StackLayout>
            <!-- Header -->
            <Grid BackgroundColor="Black" Padding="10">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="Auto" />
                </Grid.ColumnDefinitions>
                <Label Text="Аптечка"
                       TextColor="White"
                       VerticalOptions="Center" />
                <Button Text="+" 
                        BackgroundColor="Transparent"
                        TextColor="White"
                        FontAttributes="Bold"
                        Grid.Column="1"
                        VerticalOptions="Center" />
            </Grid>

            <!-- Medicine List -->
            <StackLayout Padding="10">
                <!-- Home Medicine Header -->
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="Auto" />
                    </Grid.ColumnDefinitions>
                    <Label Text="Домашняя аптечка"
                           VerticalOptions="Center" />
                    <ImageButton Source="calendar_icon.png"
                                 Grid.Column="1"
                                 VerticalOptions="Center" />
                </Grid>

                <!-- Medicine Items -->
                <StackLayout Spacing="10">
                    <!-- Analgin -->
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="Auto" />
                        </Grid.ColumnDefinitions>
                        <StackLayout>
                            <Label Text="Анальгин" TextColor="Black" />
                            <Label Text="Метамизол натрия" TextColor="Orange" />
                        </StackLayout>
                        <StackLayout Grid.Column="1" HorizontalOptions="End">
                            <Label Text="12.5.2018" TextColor="Red" HorizontalOptions="End" />
                            <Label Text="0 табл." TextColor="Red" HorizontalOptions="End" />
                        </StackLayout>
                    </Grid>

                    <!-- Ibuprofen -->
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="Auto" />
                        </Grid.ColumnDefinitions>
                        <StackLayout>
                            <Label Text="Ибупрофен" TextColor="Black" />
                            <Label Text="Ибупрофен" TextColor="Orange" />
                        </StackLayout>
                        <StackLayout Grid.Column="1" HorizontalOptions="End">
                            <Label Text="5.25.2019" TextColor="Green" HorizontalOptions="End" />
                            <Label Text="5 свч." TextColor="Green" HorizontalOptions="End" />
                        </StackLayout>
                    </Grid>
                </StackLayout>
            </StackLayout>
        </StackLayout>
    </ContentPage.Content>



</ContentPage>