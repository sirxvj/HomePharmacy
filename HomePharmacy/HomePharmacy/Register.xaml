<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="HomePharmacy.Register"
             >

    <StackLayout Padding="30">
        <Label Text="Регистрация" 
               FontSize="24" 
               TextColor="Black"
               HorizontalOptions="Center" 
               Margin="0,0"
               />

        <Entry Placeholder="Эл. почта или имя пользователя" 
               Keyboard="Email" 
               Margin="0,20,0,0"
               />

        <Entry Placeholder="Пароль" 
               IsPassword="True" 
               Margin="0,10,0,0"/>

        <Entry Placeholder="Подтверждение пароля" 
               IsPassword="True" 
               Margin="0,10,0,20"/>

        <Button Text="ЗАРЕГИСТРИРОВАТЬСЯ" 
                BackgroundColor="Black" 
                TextColor="White" 
                FontAttributes="Bold"/>

        <Label Text="Уже зарегистрирован?" 
               HorizontalOptions="Center" 
               TextColor="Black"
               Margin="0,20,0,0"/>

        <Button Text="ВОЙТИ" 
                TextColor="Black" 
                BackgroundColor="Transparent"
                Clicked="OnLogClick"
                />
    </StackLayout>
</ContentPage>
